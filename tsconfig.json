{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": ["ES2015", "ESNext", "DOM"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "node_modules"]
}
